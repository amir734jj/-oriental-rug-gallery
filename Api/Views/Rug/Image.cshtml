@model Models.Models.Products.Rug

@{
    ViewBag.Title = "Image management";
    Layout = "_Layout";
}

<div class="container" ng-controller="imageManagementCtrl">
    Drop File:
    <div ngf-drop ngf-select ng-model="files" class="drop-box"
         ngf-drag-over-class="'dragover'" ngf-multiple="true" ngf-allow-dir="true"
         accept="image/*"
         ngf-pattern="'image/*'">
        Drop images here or click to upload
    </div>
    <div ngf-no-file-drop>File Drag/Drop is not supported for this browser</div>

    <div ng-if="files.length">
        Files:
        <ul>
            <li ng-repeat="f in files">{{f.name}} {{f.$error}} {{f.$errorParam}}</li>
        </ul>
    </div>

    <div ng-if="log">
        Upload Log:
        <pre>{{log}}</pre>
    </div>

    <div class="row">
        <div class="col-md-4" ng-repeat="image in images">
            <div class="thumbnail">
                <img ng-src="{{ image.url }}" alt="Description for {{ image.key }}"/>
                <div class="caption">
                    <button class="btn btn-danger" ng-click="deleteImage( image.key )">Delete</button>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
    window.id = "@(Model.Id)";
</script>